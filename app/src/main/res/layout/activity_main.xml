<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/back1"> <!-- Set the background image here -->
    <TextView
        android:id="@+id/welcome_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Your Daily Class Routine"
        android:textSize="24sp"
        android:textColor="#000000"
        android:padding="8dp"
    android:gravity="center"
    android:layout_marginBottom="16dp" />
    <!-- Spinner for selecting a location -->
    <Spinner
        android:id="@+id/location_spinner"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:entries="@array/days"
        android:textSize="20sp"

        android:spinnerMode="dropdown" />

    <!-- Button to get the weather information -->
    <Button
        android:id="@+id/get_weather_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here"
        android:layout_marginTop="16dp" />

    <!-- TextView to display the weather information -->
    <TextView
        android:id="@+id/weather_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textColor="#00000F"
        android:padding="8dp"
        android:background="#F0F0F0"
        android:gravity="center" />

</LinearLayout>
